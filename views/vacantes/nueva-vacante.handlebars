<main class="contenedor">
    <form class="default-form" action="/vacantes/nueva" method="post">
        <h3>Información general</h3>

        <div class="campo">
            <label for="text">Título</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer"/>
        </div>
        <div class="campo">
            <label for="text">Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa que contrata"/>
        </div>
        <div class="campo">
            <label for="text">Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej. México o remoto"/>
        </div>
        <div class="campo">
            <label for="text">Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej: $500"/>
        </div>
        <div class="campo">
            <label for="text">Contrato</label>
            <select name="contrato">
                <option selected disabled>Selecciona</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo completo">Tiempo completo</option>
                <option value="Medio tiempo">Medio tiempo</option>
                <option value="Por proyecto">Por proyecto</option>
            </select>
        </div>

        <h3>Descrición del puesto</h3>
        <div class="campo descripcion">
            <label for="text">Descripcion del puesto</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>