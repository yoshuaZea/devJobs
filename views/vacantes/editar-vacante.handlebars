<main class="contenedor">
    <form class="default-form" action="/vacante/editar/{{vacante.url}}" method="post">
        <h3>Información general</h3>

        <div class="campo">
            <label for="text">Título</label>
            <input type="text" name="titulo" value="{{vacante.titulo}}" placeholder="Ej: React Developer"/>
        </div>
        <div class="campo">
            <label for="text">Empresa</label>
            <input type="text" name="empresa" value="{{vacante.empresa}}" placeholder="Empresa que contrata" required/>
        </div>
        <div class="campo">
            <label for="text">Ubicación</label>
            <input type="text" name="ubicacion" value="{{vacante.ubicacion}}" placeholder="Ej. México o remoto" required/>
        </div>
        <div class="campo">
            <label for="text">Salario (USD)</label>
            <input type="text" name="salario" value="{{vacante.salario}}" placeholder="Ej: $500" required/>
        </div>
        <div class="campo">
            <label for="text">Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option selected disabled>Selecciona</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo completo">Tiempo completo</option>
                    <option value="Medio tiempo">Medio tiempo</option>
                    <option value="Por proyecto">Por proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descrición del puesto</h3>
        <div class="campo descripcion">
            <label for="text">Descripcion del puesto</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>
    </form>
</main>